@model IEnumerable<ClassLibrary1.DB.goods>  
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>





        @foreach (var item in Model)
        {
            <div class="card" style="width: 20rem; display: inline-block; margin: 70px">
                <img class="card-img-top" src="@item.GoodPicture" alt="Card image cap">
                <div class="card-body">
                    <h4 class="card-title">@item.GoodName</h4>
                    <p class="card-text">@item.GoodDescription</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@item.GoodPrice</li>
                    <li class="list-group-item">@item.GoodCategory</li>
                    
                </ul>
                <div class="card-body">
                    @*<a href="#" class="card-link"> Add to a Cart </a>*@
                    @Html.ActionLink("Add to a cart", "Index", "CARD", new {  }, new { @class = "btn btn-info" })
                </div>
            </div>
        }
      
   





